<div class="articles-container">
    {% if articles|length > 0 %}
        {% for article in articles %}
            <div class="article-container">
                <div class="article-header">
                    <div class="article-picture">
                        <a href="index.php?route=article&articleId={{ article.getArticleId }}">
                            <img src="{{ article.getTeaserPicture.getPictureUrl }}" alt="">
                        </a>
                        <div class="article-created">
                            <p>{{ article.getCreated.getDateString }}</p>
                        </div>
                    </div>
                </div>
                <div class="article-content">
                    <a href="index.php?route=article&articleId={{ article.getArticleId }}">
                        <h2>{{ article.getTitle }}</h2>
                        <p>{{ article.getSubtitle }}</p>
                    </a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        Es gibt noch keine Artikel.
    {% endif %}
</div>